pipeline {
    agent { docker { image 'node:6.3' } }
        stages {
            stage('Build') {
                steps {
                     sh 'npm --version'
                }
            }
            stage('Test') {
                steps {
                    echo 'This is the Testing Stage'
                }
            }
            stage('Deploy') {
                steps {
                    echo 'This is the Deploy Stage'
                }
            }
        }   
    
